<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= stylesheet_link_tag    "maily/application", :media => "all" %>
  <%= javascript_include_tag "maily/application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= render 'maily/shared/header' %>

  <div class="wrap_content clearfix">
    <%= render 'maily/shared/sidebar' %>

    <div class="content">
      <% if flash[:alert].present? %>
        <p class="alert alert-warning"><%= flash[:alert].html_safe %></p>
      <% end %>

      <% if flash[:notice].present? %>
        <p class="alert alert-success"><%= flash[:notice].html_safe %></p>
      <% end %>

      <%= yield %>
    </div>
  </div>

  <%= render 'maily/shared/footer' %>
</body>
</html>
