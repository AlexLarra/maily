<h1><%= "#{params[:mailer]} > #{params[:method]}" %></h1>

<p>
  <%= link_to 'Return to list', root_path %> |
  <%= link_to 'Edit', edit_maily_email_path(mailer: params[:mailer], method: params[:method]) %>
</p>

<h2>Send</h2>
<%= form_tag(deliver_maily_email_path(mailer: params[:mailer], method: params[:method]), method: :post) do %>
  <%= label_tag 'To:' %>
  <%= email_field_tag :to %>
  <%= submit_tag 'Send' %>
<% end %>

<h2>Subject</h2>
<%= @email.subject %>

<h2>Body</h2>
<%= @email.body %>
